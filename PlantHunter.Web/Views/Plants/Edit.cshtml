@model PlantHunter.Mobile.Web.Data.Models.Plant

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Plant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
