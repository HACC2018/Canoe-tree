            </div>
            <div class="form-group">
                <label asp-for="Family" class="control-label"></label>
                <input asp-for="Family" class="form-control" />
                <span asp-validation-for="Family" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndangeredLevel" class="control-label"></label>
                <input asp-for="EndangeredLevel" class="form-control" />
                <span asp-validation-for="EndangeredLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
